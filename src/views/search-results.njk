{% extends "layout.njk" %}

{% block styles %}
  <link rel="stylesheet" href="/css/search-results.css">
{% endblock styles %}

{% block title %}
  <title>Resultado da pesquisa</title>
{% endblock title %}

{% set pageId = "page-search-results" %}

{% block content %}
  {% include "partials/page-header.html" %}
  <main>
    <h4>
      {% if total > 1 %}
        <strong>{{ total }}
          Locais</strong>
        encontrados
      {% else %}
        <strong>{{ total }}
          Local</strong>
        encontrado
      {% endif %}
    </h4>

    {% if total >= 1 %}
      <div class="cards">

        {# {{ places }} objeto que vem do db #}

        {# loop para alimentar os cards com os dados do db #}
        {% for place in places %}
          <div class="card">
            <img src="{{ place.image }}" alt="{{ place.name }}">
            <h1>{{ place.name }}</h1>
            <h3>{{ place.items }}</h3>
            <p>
              {{ place.city }},
              {{ place.state }}
              <br>
              {{ place.address }}
              <br>
              {{ place.address2 }}
            </p>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div id="search-not-found">
        <h1>Nenhum local cadastrado</h1>
        <span></span>
      </div>
    {% endif %}

  </main>
{% endblock content %}